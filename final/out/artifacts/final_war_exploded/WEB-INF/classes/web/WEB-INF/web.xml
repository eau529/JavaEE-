<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>userInfo</servlet-name>
        <servlet-class>control.UserInfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userInfo</servlet-name>
        <url-pattern>/userInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Article</servlet-name>
        <servlet-class>control.ArticleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Article</servlet-name>
        <url-pattern>/ArticleController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Friend</servlet-name>
        <servlet-class>control.FriendController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Friend</servlet-name>
        <url-pattern>/FriendController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Comment</servlet-name>
        <servlet-class>control.CommentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/CommentController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Message</servlet-name>
        <servlet-class>control.MessageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Message</servlet-name>
        <url-pattern>/MessageController</url-pattern>
    </servlet-mapping>

</web-app>